{{ 'section-icons-links.css' | asset_url | stylesheet_tag }}

{% style %}
.section-icons-links{
  background-color: {{ section.settings.bg_color }};
}  
{% endstyle %}
<div class="container page-width">
  {% if section.settings.title != blank %}
    <h2 class="title">{{ section.settings.title }}</h2>
  {% endif %}
  <div class="main-icons-links-container">
    {% if section.blocks.size > 0 %}
      <div class="icons-container">
        {% for block in section.blocks %}
          <div class="icon-content">
            {% if block.settings.image %}
              <img loading="lazy" src="{{ block.settings.image | img_url: "master" }}"> 
            {% endif %}
            <div class="text-content">
              {% if block.settings.title %}
                <h3>{{ block.settings.title }}</h3>
              {% endif %}
              {% if block.settings.url_title %}
                <a {% if block.settings.url %}href="{{ block.settings.url }}"{% endif %}>{{ block.settings.url_title }}</a>
              {% endif %}
            </div>
          </div> 
        {% endfor %}
      </div> 
    {% endif %}
  </div>
</div>
{% schema %}
{
  "name": "Icons Links",
  "tag": "section",
  "class": "section section-icons-links",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title", 
      "label": "t:sections.collection-list.settings.title.label"
    },
    {
      "type": "color",
      "id": "bg_color", 
      "default": "#FFFFFF",
      "label": "Background Color"
    } 
  ],
  "blocks": [ 
    {
      "type": "icon_link",
      "name": "Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "url_title",
          "label": "Text Link"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link"
        }
      ]
    }
  ], 
  "presets": [
    {
      "name": "Icons Links",
      "blocks": [
        {
          "type": "icon_link"
        },
        {
          "type": "icon_link"
        },
        {
          "type": "icon_link"
        },
        {
          "type": "icon_link"
        } 
      ]
    }
  ]
}
{% endschema %}
